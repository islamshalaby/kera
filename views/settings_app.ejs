<html lang="en">
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body class="antialiased">
    <div class="wrapper">
        
        <div class="wrapper">
          <%- include("./partials/leftSideNav")%>
    <div class="page-wrapper">
      <div class="container-xl">
        <!-- Page title -->
        <div class="page-header d-print-none">
          <div class="row align-items-center">
            <div class="col">
              <!-- Page pre-title -->
              <h2 class="page-title">
                Settings
              </h2>
            </div>
            <!-- Page title actions -->
            <div class="col-auto ms-auto d-print-none">
              <div class="btn-list">
                
                <a href="#" class="btn btn-primary d-sm-none btn-icon" data-bs-toggle="modal" data-bs-target="#modal-report" aria-label="Create new report">
                  <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><line x1="12" y1="5" x2="12" y2="19" /><line x1="5" y1="12" x2="19" y2="12" /></svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="page-body">
        <div class="container-xl">
          <div class="row row-cards">
            
            <div class="col-12">
                <div class="card">
                    <% if (requiredError && requiredError.length > 0) {%>
                        <div class="alert icon-custom-alert alert-outline-pink b-round fade show" role="alert">
                            <i class="mdi mdi-alert-outline alert-icon"></i>
                            <div class="alert-text">
                                <%= requiredError %>
                            </div>

                            <div class="alert-close">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true"><i class="mdi mdi-close text-danger"></i></span>
                                </button>
                            </div>
                        </div>
                    <%}%>
                    <form action="" method="POST">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="editor5">About us in English</label>
                                        <textarea class="form-control" name="about_en" id="editor5"><%= (data) ? data.about_en : '' %></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="editor6">About us in Arabic</label>
                                        <textarea class="form-control" name="about_ar" id="editor6"><%= (data) ? data.about_ar : '' %></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="editor1">Privacy in English</label>
                                        <textarea class="form-control" name="privacy_en" id="editor1"><%= (data) ? data.privacy_en : '' %></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="editor2">Privacy in Arabic</label>
                                        <textarea class="form-control" name="privacy_ar" id="editor2"><%= (data) ? data.privacy_ar : '' %></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="editor3">Terms & Conditions in English</label>
                                        <textarea class="form-control" name="terms_en" id="editor3"><%= (data) ? data.terms_en : '' %></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="editor4">Terms & Conditions in Arabic</label>
                                        <textarea class="form-control" name="terms_ar" id="editor4"><%= (data) ? data.terms_ar : '' %></textarea>
                                    </div>
                                    <div class="card-footer text-end">
                                        <div class="d-flex">
                                            <button type="submit" class="btn btn-primary">Update</button>
                                        </div>
        
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        
                    </form>
                  </div>
              </div>
          </div>
        </div>
      </div>
      
      <%- include('./partials/footer')%>
    </div>
  </div>
      
    </div>
    
    <%- include('./partials/scripts')%>
    

  </body>
</html>