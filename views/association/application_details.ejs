                                                <span class="form-selectgroup-label"><!-- Download SVG icon from http://tabler-icons.io/i/user -->
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><circle cx="12" cy="5" r="2" /><path d="M10 22v-4h-2l2 -6a1 1 0 0 1 1 -1h2a1 1 0 0 1 1 1l2 6h-2v4" /></svg>
                                                  Female</span>
                                              </label>
                                          </div>
                                          <div class="form-group mb-3 ">
                                            <label class="form-label">Birth of date</label>
                                            <div>
                                              <input class="form-control" placeholder="Select a date" id="datepicker-icon-prepend" value="<%= data.student.birthDate %>">
                                            </div>
                                        </div>
                                        <div class="form-group mb-3 ">
                                            <label class="form-label">Birth of date Image</label>
                                            <div>
                                              <img src="<%= data.birthImage%>" alt="user">
                                              <input type="file" name="profileImage" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group mb-3 ">
                                          <label class="form-label">Medical history</label>
                                          <div>
                                              <textarea class="form-control" required data-bs-toggle="autosize" name="medicalHistory" style="overflow: hidden; overflow-wrap: break-word; resize: none; height: 56px;"><%= data.medicalHistory %></textarea>
                                          </div>
                                        </div>
                                        <div class="row">
                                          <div class="col-lg-12">
                                            <div style="position: relative;" class="form-group row">
                                              <!-- <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?v=3&amp;sensor=false&libraries=places"></script> -->
                                              <div style="position: absolute;
                                                  top: 10px;
                                                  left: 290px;
                                                  z-index: 999;" class="col-md-4">
                                                  <input id="searchTextField" placeholder="Location" class="form-control" type="text" size="50">
                                              </div>
                                              <div id="googleMap" style="width:100%;height:400px;"></div>
                                              <div class="col-sm-6">
                                                  
                                                  <div class="col-sm-8">
                                                      <input id="lat" class="form-control" type="hidden" name="latitude"
                                                          value="<%= data.location.latitude%>" id="name">
                                                  </div>
                                              </div>
                                              <div class="col-sm-6">
                                              
                                                  <div class="col-sm-8">
                                                      <input id="long" class="form-control" type="hidden" name="longitude"
                                                          value="<%= data.location.longitude%>" id="name">
                                                  </div>
                                              </div>
                                          </div>
                                        </div>
                                          <div class="form-group mb-3 ">
                                              <label class="form-label">Profile image</label>
                                              <div>
                                                <input type="file" name="relatedProfileImage" class="form-control">
                                              </div>
                                          </div>
                                          
                                      </div>
                                      
                                  </div>
                              </div>
                          </form>
                        </div>
                    <% } %>
                    
                  </div>
                </div>
              </div>
                
              </div>
          </div>
        </div>
      </div>
      
      <%- include('./partials/footer')%>
    </div>
  </div>
      
    </div>
    
