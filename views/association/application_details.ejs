                                      <div class="col-lg-12">
                                          <div class="form-group mb-3 ">
                                              <label class="form-label">Name</label>
                                              <div>
                                                <input type="text" name="relatedName" class="form-control" value="<%= data.related.name %>">
                                              </div>
                                          </div>
                                          <div class="form-group mb-3 ">
                                              <label class="form-label">Relation</label>
                                              <div>
                                                <input type="text" name="relation" class="form-control" value="<%= data.related.relation %>">
                                              </div>
                                          </div>
                                          <div class="form-group mb-3 ">
