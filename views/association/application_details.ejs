                    <div class="tab-pane active show" id="father-edit">
                      <form action="" method="POST" enctype="multipart/form-data">
                          <div class="card-body">
                              <div class="row">
                                  <div class="col-lg-12">
                                      <div class="form-group mb-3 ">
                                          <label class="form-label">Name</label>
                                          <div>
                                            <input type="text" name="username" class="form-control" value="<%= data.father.name %>">
                                          </div>
                                      </div>
                                      <div class="form-group mb-3 ">
                                          <label class="form-label">Job</label>
                                          <div>
                                            <input type="text" name="job" class="form-control" value="<%= data.father.job %>">
                                          </div>
                                      </div>
                                      <div class="form-group mb-3 ">
                                          <label class="form-label">Phone numbers</label>
                                          <% if(data.father.phone.length > 0) {%>
                                            <% data.father.phone.forEach((phone) => { %>
                                          <div>
                                            <input type="tel" name="phone" class="form-control" value="<%= phone %>">
                                          </div>
                                            <% }) %>
                                          <% } %>
                                      </div>
                                      <div class="form-group mb-3 ">
                                        <label class="form-label">National id Image</label>
                                        
                                        <div>
                                          <img src="<%= data.idImage%>" alt="user">
                                          <input type="file" name="profileImage" class="form-control">
                                        </div>
                                    </div>
                                      <div class="form-group mb-3 ">
                                          <label class="form-label">Profile image</label>
                                          <div>
                                            <input type="file" name="fatherProfileImage" class="form-control">
                                          </div>
                                      </div>
                                      
                                  </div>
                                  
                              </div>
                          </div>
                      </form>
                    </div>
                    <% } %>
