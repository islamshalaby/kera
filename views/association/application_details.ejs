                                  <div class="row">
                                      <div class="col-lg-12">
                                          <div class="form-group mb-3 ">
                                              <label class="form-label">Name</label>
                                              <div>
                                                <input type="text" name="username" class="form-control" value="<%= data.mother.name %>">
                                              </div>
                                          </div>
                                          <div class="form-group mb-3 ">
                                              <label class="form-label">Job</label>
                                              <div>
                                                <input type="text" name="job" class="form-control" value="<%= data.mother.job %>">
                                              </div>
                                          </div>
                                          <div class="form-group mb-3 ">
                                              <label class="form-label">Phone numbers</label>
                                              <% if(data.mother.phone.length > 0) {%>
                                                <% data.mother.phone.forEach((phone) => { %>
                                              <div>
                                                <input type="tel" name="phone" class="form-control" value="<%= phone %>">
                                              </div>
                                                <% }) %>
