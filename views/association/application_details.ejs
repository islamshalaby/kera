          <div class="row row-cards">
            
            <div class="col-12">
              <div class="card">
                <ul class="nav nav-tabs" data-bs-toggle="tabs">
                <% if(data.father && data.father.name) {%>
                  <li class="nav-item">
                    <a href="#father-edit" class="nav-link active" data-bs-toggle="tab">
                        <span class="avatar" style="background-image: url('<%= data.father.profileImage %>')"></span>&nbsp; Father
                    </a>
                  </li>
                <% } %>
                <% if(data.mother && data.mother.name) {%>
                  <li class="nav-item">
                    <a href="#mother-edit" class="nav-link" data-bs-toggle="tab">
                        <span class="avatar" style="background-image: url('<%= data.father.profileImage %>')"></span>&nbsp; Mother
                    </a>
                  </li>
                <% } %>
                <% if(data.related && data.related.name) {%>
                    <li class="nav-item">
                      <a href="#related-edit" class="nav-link" data-bs-toggle="tab">
                          <span class="avatar" style="background-image: url('<%= data.related.profileImage %>')"></span>&nbsp; Mother
                      </a>
                    </li>
                <% } %>
                <% if(data.student && data.student.name) {%>
                    <li class="nav-item">
                        <a href="#student-edit" class="nav-link" data-bs-toggle="tab">
                            <span class="avatar" style="background-image: url('<%= data.student.profileImage %>')"></span>&nbsp; Student
                        </a>
                    </li>
                <% } %>
                
                </ul>
                <div class="card-body">
                  <div class="tab-content">
