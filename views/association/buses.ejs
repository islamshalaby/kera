<!DOCTYPE html>
<html lang="en">


<head>
    <%- include('./partials/head'); %>
    <style>
        #old, #right, #left
        {
            display: none;
        }
    </style>
</head>

<body>
        <!--end logo-->
        <%- include("./partials/navBar")%>
    <%- include("./partials/leftSideNav")%>
    <div class="page-wrapper">
        <!-- Page Content-->
        <div class="page-content">
            <div class="container-fluid">
                <!-- Page-Title -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="page-title-box">
                            <div class="float-right">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="javascript:void(0);">Terlive</a></li>
                                    <li class="breadcrumb-item active">Buses</li>
                                </ol>
                            </div>
                            <h4 class="page-title">Buses</h4>
                        </div>
                        <!--end page-title-box-->
                    </div>
                    <!--end col-->
                </div><!-- end page title end breadcrumb -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <form action="" method="POST">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group row">
                                                <label class="col-sm-2 col-form-label text-right">Plate number type</label>
                                                <div class="col-sm-10">
                                                    <select id="plateNumberType" class="form-control">
                                                        <option>Select</option>
                                                        <option value="1">Old plate number</option>
                                                        <option value="2">Recent plate number</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div id="old" class="form-group row">
                                                <div class="col-sm-10">
                                                    <input class="form-control" placeholder="Old plate number" disabled type="text" name="plateNumber" id="plateNumber">
                                                </div>
                                            </div>
                                            <div id="left" class="form-group row">
                                                <div class="col-sm-10">
                                                    <input class="form-control" placeholder="Left plate number" disabled type="text" name="leftPlateNumber" id="leftPlateNumber">
                                                </div>
                                            </div>
                                            <div id="right" class="form-group row">
                                                <div class="col-sm-10">
                                                    <input class="form-control" placeholder="Right plate number" disabled type="text" name="rightPlateNumber" id="rightPlateNumber">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-2">
                                                    <button type="submit" class="btn btn-gradient-primary">Add</button>
                                                </div>
                                                
                                            </div>
                                        </div>
                                        
                                        
                                    </div>
                                </form>
                                <table id="datatable" class="table table-bordered dt-responsive nowrap"
                                    style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                    <thead>
                                        <tr>
                                            <th>Plate number</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%data.forEach((row) => {%>
                                        <tr>
                                            <td><%= row.plateNumber ? row.plateNumber : row.leftPlateNumber + " | " + row.rightPlateNumber%></td>
                                            <td><a onclick="return confirm('Are you sure ?')" href="/association-panel/buses/delete/<%= row._id%>"><i class="fas fa-trash"></i></a></td>
                                        </tr>
                                        <%})%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div><!-- end col -->
                </div><!-- end row -->
                <!--end row-->
            </div><!-- container -->
            <footer class="footer text-center text-sm-left">&copy; 2020 Terlive <span
                    class="text-muted d-none d-sm-inline-block float-right">Crafted with <i
                        class="mdi mdi-heart text-danger"></i> by Mannatthemes</span></footer>
            <!--end footer-->
        </div><!-- end page content -->
    </div><!-- end page-wrapper -->
    <%- include('./partials/scripts')%>
    <script>
        $("#plateNumberType").on("change", function() {
            if($(this).val() == 1) {
                $("#old").show()
                $("#old input").prop("disabled", false)
                $("#right").hide()
                $("#right input").prop("disabled", true)
                $("#left").hide()
                $("#left input").prop("disabled", true)
            }else if($(this).val() == 2) {
                $("#old").hide()
                $("#old input").prop("disabled", true)
                $("#right").show()
                $("#right input").prop("disabled", false)
                $("#left").show()
                $("#left input").prop("disabled", false)
            }
        })
    </script>
</body>


</html>