<html lang="en">
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body class="antialiased">
    <div class="wrapper">
        
        <div class="wrapper">
          <%- include("./partials/leftSideNav")%>
    <div class="page-wrapper">
      <div class="container-xl">
        <!-- Page title -->
        <div class="page-header d-print-none">
          <div class="row align-items-center">
            <div class="col">
              <!-- Page pre-title -->
              <h2 class="page-title">
                Parent profile
              </h2>
            </div>
            <!-- Page title actions -->
            <div class="col-auto ms-auto d-print-none">
              <div class="btn-list">
                
                <a href="#" class="btn btn-primary d-sm-none btn-icon" data-bs-toggle="modal" data-bs-target="#modal-report" aria-label="Create new report">
                  <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><line x1="12" y1="5" x2="12" y2="19" /><line x1="5" y1="12" x2="19" y2="12" /></svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="page-body">
        <div class="container-xl">
          <div class="row row-cards">
            <%if (type == 'edit') {%>
              <div class="col-lg-3">
                  <div class="card card-sm">
                    <img src="<%= (data.profileImage) ? data.profileImage : 'https://res.cloudinary.com/df0b7ctlg/image/upload/v1584784906/klskq5yjvclxbujz7gxx.png'%>" alt="user">
                      <!--end card-body-->
                  </div>
                  <!--end card-->
              </div>
              <!--end col-->
            <%}%>
            <div class="col-12">
              <div class="card">
                <ul class="nav nav-tabs" data-bs-toggle="tabs">
                  <li class="nav-item">
                    <a href="#user-edit" class="nav-link active" data-bs-toggle="tab">Edit</a>
                  </li>
                  <li class="nav-item">
                    <a href="#user-students" class="nav-link" data-bs-toggle="tab">Students</a>
                  </li>
                  
                </ul>
                <div class="card-body">
                  <div class="tab-content">
                    <div class="tab-pane active show" id="user-edit">
                      <% if (requiredError && requiredError.length > 0) {%>
                        <div class="alert icon-custom-alert alert-outline-pink b-round fade show" role="alert">
                            <i class="mdi mdi-alert-outline alert-icon"></i>
                            <div class="alert-text">
                                <%= requiredError %>
                            </div>

                            <div class="alert-close">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true"><i class="mdi mdi-close text-danger"></i></span>
                                </button>
                            </div>
                        </div>
                      <%}%>
                      <form action="" method="POST" enctype="multipart/form-data">
                          <div class="card-body">
                              <div class="row">
                                  <div class="col-lg-12">
                                      <div class="form-group mb-3 ">
                                          <label class="form-label">Name</label>
                                          <div>
                                            <input type="text" name="username" class="form-control" value="<%= (type == 'edit') ? data.username : ''%>">
                                          </div>
                                      </div>
                                      <div class="form-group mb-3 ">
                                          <label class="form-label">Email</label>
                                          <div>
                                            <input type="email" name="email" class="form-control" value="<%= (type == 'edit') ? data.email : ''%>">
                                          </div>
                                      </div>
                                      <div class="form-group mb-3 ">
                                          <label class="form-label">Phone number</label>
                                          <div>
                                            <input type="tel" name="phone" class="form-control" value="<%= (type == 'edit') ? data.phone.value : ''%>">
                                          </div>
                                      </div>
                                      <div class="form-group mb-3 ">
                                          <label class="form-label">Profile image</label>
                                          <div>
                                            <input type="file" name="profileImage" class="form-control">
                                          </div>
                                      </div>
          
                                      
                                      <div style="position: relative;" class="form-group row">
                                          <!-- <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?v=3&amp;sensor=false&libraries=places"></script> -->
                                          <div style="position: absolute;
                                              top: 10px;
                                              left: 290px;
                                              z-index: 999;" class="col-md-4">
                                              <input id="searchTextField" placeholder="Location" class="form-control" type="text" size="50">
                                          </div>
                                          <div id="googleMap" style="width:100%;height:400px;"></div>
                                          <div class="col-sm-6">
                                              
                                              <div class="col-sm-8">
                                                  <input id="lat" class="form-control" type="hidden" name="latitude"
                                                      value="<%= (type == 'edit') ? data.location.latitude : ''%>" id="name">
                                              </div>
                                          </div>
                                          <div class="col-sm-6">
                                          
                                              <div class="col-sm-8">
                                                  <input id="long" class="form-control" type="hidden" name="longitude"
                                                      value="<%= (type == 'edit') ? data.location.longitude : ''%>" id="name">
                                              </div>
                                          </div>
                                      </div>
                                      <div class="card-footer text-end">
                                          <div class="d-flex">
                                              <button type="submit" class="btn btn-primary"><%= (type == 'edit' ? 'Update' : 'Add')%></button>
                                          </div>
          
                                      </div>
                                  </div>
                                  
                              </div>
                          </div>
                      </form>
                    </div>
                    <div class="tab-pane" id="user-students">
                        <%if (data.students.length > 0) {%>
                            <%data.students.forEach((row) => {%>
                                <div class="col-md-6 col-lg-3">
                                    <div class="card">
                                        <div class="card-body p-4 text-center">
                                            <span class="avatar avatar-xl mb-3 avatar-rounded" style="background-image: url('<%= row.profileImage %>')"></span>
                                            <h3 class="m-0 mb-1"><a href="/association-panel/students/edit/<%= row._id%>"><%= row.username%></a></h3>
                                            <!-- <div class="text-muted">UI Designer</div> -->
                                            <div class="mt-3">
                                                <span class="badge bg-purple-lt"><%= row.classId.name%></span>
                                            </div>
                                        </div>
                                        <div class="d-flex">
                                        <%if (row.classId.teachers.length > 0) {%>
                                            <%row.classId.teachers.forEach((teacher) => {%>
                                                <a href="/association-panel/teachers/edit/<%= teacher._id%>" class="card-btn"><!-- Download SVG icon from http://tabler-icons.io/i/mail -->
                                                    <%= teacher.username %>
                                                </a>
                                            <%})%>
                                        <%}%>
                                        
                                        
                                        </div>
                                    </div>
                                </div>
                            <%})%>
                        <%}%>
                        
                    </div>
                    
                  </div>
                </div>
              </div>
                
              </div>
          </div>
        </div>
      </div>
      
      <%- include('./partials/footer')%>
    </div>
  </div>
      
    </div>
    
    <%- include('./partials/scripts')%>

