<html lang="en">
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body class="antialiased">
    <div class="wrapper">
        
        <div class="wrapper">
          <%- include("./partials/leftSideNav")%>
    <div class="page-wrapper">
      <div class="container-xl">
        <!-- Page title -->
        <div class="page-header d-print-none">
          <div class="row align-items-center">
            <div class="col">
              <!-- Page pre-title -->
              <h2 class="page-title">
                <%= (type == 'edit') ? 'Edit' : 'Add new'%> student
              </h2>
            </div>
            <!-- Page title actions -->
            <div class="col-auto ms-auto d-print-none">
              <div class="btn-list">
                
                <a href="#" class="btn btn-primary d-sm-none btn-icon" data-bs-toggle="modal" data-bs-target="#modal-report" aria-label="Create new report">
                  <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><line x1="12" y1="5" x2="12" y2="19" /><line x1="5" y1="12" x2="19" y2="12" /></svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="page-body">
        <div class="container-xl">
          <div class="row row-cards">
            <%if (type == 'edit') {%>
              <div class="col-lg-3">
                  <div class="card card-sm">
                    <img src="<%= (data.profileImage) ? data.profileImage : 'https://res.cloudinary.com/df0b7ctlg/image/upload/v1584784906/klskq5yjvclxbujz7gxx.png'%>" alt="user">
                      <!--end card-body-->
                  </div>
                  <!--end card-->
              </div>
              <!--end col-->
            <%}%>
            <div class="col-12">
                <div class="card">
                    <% if (requiredError && requiredError.length > 0) {%>
                        <div class="alert icon-custom-alert alert-outline-pink b-round fade show" role="alert">
                            <i class="mdi mdi-alert-outline alert-icon"></i>
                            <div class="alert-text">
                                <%= requiredError %>
                            </div>

                            <div class="alert-close">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true"><i class="mdi mdi-close text-danger"></i></span>
                                </button>
                            </div>
                        </div>
                    <%}%>
                    <form action="" method="POST" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group mb-3 ">
                                        <label class="form-label">Name</label>
                                        <div>
                                          <input type="text" name="username" class="form-control" value="<%= (type == 'edit') ? data.username : ''%>">
                                        </div>
                                    </div>
                                    <!-- <div class="form-group mb-3 ">
                                        <label class="form-label">Student Id</label>
                                        <div>
                                          <input type="text" name="studentId" class="form-control" value="<%= (type == 'edit') ? data.studentId : ''%>">
                                        </div>
                                    </div> -->
                                    <div style="margin-bottom: 20px;" class="form-floating">
                                        <select class="form-select" name="parentId" id="floatingSelect" aria-label="Floating label select example">
                                          <option selected>Select</option>

                                          <%parents.forEach((parent) => {%>
                                            <option <%= (type == 'edit' && JSON.stringify(parent._id) == JSON.stringify(data.parentId)) ? 'selected' : ''%> value="<%= parent._id%>"><%= parent.username%></option>
                                            <%})%>
                                        </select>
                                        <label for="floatingSelect">Parent</label>
                                    </div>
                                    <div style="margin-bottom: 20px;" class="form-floating">
                                        <select class="form-select" name="classId" id="floatingSelect" aria-label="Floating label select example">
                                          <option selected>Select</option>

                                          <%classes.forEach((row) => {%>
                                            <option <%= (type == 'edit' && JSON.stringify(row._id) == JSON.stringify(data.classId)) ? 'selected' : ''%> value="<%= row._id%>"><%= row.name%></option>
                                            <%})%>
                                        </select>
                                        <label for="floatingSelect">Class</label>
                                    </div>
                                    
                                    <div class="form-group mb-3 ">
                                        <label class="form-label">Profile image</label>
                                        <div>
                                          <input type="file" name="profileImage" class="form-control">
                                        </div>
                                    </div>
        
                                    
                                    
                                    <div class="card-footer text-end">
                                        <div class="d-flex">
                                            <button type="submit" class="btn btn-primary"><%= (type == 'edit' ? 'Update' : 'Add')%></button>
                                        </div>
        
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        
                    </form>
                  </div>
              </div>
          </div>
        </div>
      </div>
      
      <%- include('./partials/footer')%>
    </div>
  </div>
      
    </div>
    
    <%- include('./partials/scripts')%>

  </body>
</html>