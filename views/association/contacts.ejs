<html lang="en">
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body class="antialiased">
    <div class="wrapper">
        
        <div class="wrapper">
          <%- include("./partials/leftSideNav")%>
    <div class="page-wrapper">
      <div class="container-xl">
        <!-- Page title -->
        <div class="page-header d-print-none">
          <div class="row align-items-center">
            <div class="col">
              <!-- Page pre-title -->
              <h2 class="page-title">
                Contact Us
              </h2>
            </div>
            <!-- Page title actions -->
            <div class="col-auto ms-auto d-print-none">
              <div class="btn-list">
                
                <a href="#" class="btn btn-primary d-sm-none btn-icon" data-bs-toggle="modal" data-bs-target="#modal-report" aria-label="Create new report">
                  <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><line x1="12" y1="5" x2="12" y2="19" /><line x1="5" y1="12" x2="19" y2="12" /></svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="page-body">
        <div class="container-xl">
          <div class="row row-deck row-cards">
            <div class="col-12">
                <div class="card">
                  <div class="table-responsive">
                      <table class="table table-vcenter card-table">
                          <thead>
                              <tr>
                                <th style='min-width : 150px'>Parent</th>
                                <th>subject</th>
                                <th colspan="2">message</th>
                                <th colspan="2" style='min-width : 200px'>Date</th>
                              </tr>
                          </thead>
                          <tbody>
                              <%data.forEach((row) => {%>
                              <tr>
                                <td style='min-width : 150px'>
                                  <div class="d-flex py-1 align-items-center">
                                    <span class="avatar me-2" style="background-image: url('<%= row.parent.profileImage%>')"></span>
                                    <div class="flex-fill">
                                      <div class="font-weight-medium"><%= row.parent.username%></div>
                                    </div>
                                  </div>
                                </td>
                                <td>
                                  <%= row.subject %>
                                </td>
                                <td colspan="2" max-width="100px">
                                    <%= row.message %>
                                    
                                </td>
                                <td colspan="2"  style='min-width : 200px'><%= moment((row.date / 100) * 100).format("DD MMM YYYY hh:mm a")%></td>
                              </tr>
                              <%})%>
                          </tbody>
                      </table>
                  </div>
                  </div>
              </div>
          </div>
        </div>
      </div>
      <%- include('./partials/footer')%>
    </div>
  </div>
      
    </div>
    
    <%- include('./partials/scripts')%>
  </body>
</html>